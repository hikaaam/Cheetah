{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowJs": true,
    "paths": {
      "*": ["node_modules/*"],
      "@App/*": ["src/*"],
      "lib/*": ["common/*"]
    }
  },
  "include": ["src/**/*"]
}
